<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <label>
                    <text>RealmsAddon v0.3.1</text>
                </label>
                <flow-layout direction="horizontal">
                    <children>
                        <button id="Home">
                            <text>Home</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                        <button id="Gui">
                            <text>Gui</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                        <button id="Settings">
                            <text>Settings</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                        <button id="Range">
                            <text>Range</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                    </children>
                </flow-layout> <!--Tab buttons-->
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text>Range tab</text>
                        </label>
                    </children>
                </flow-layout>


                <flow-layout direction="vertical">
                    <children>
                        <checkbox id="MainHandShowRangeSetting">
                            <text>Show Main Hand Range</text>
                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </checkbox>
                        <label id="MainHandTypeLabel">
                            <text>Main Hand Range Type</text>
                        </label>
                        <dropdown id="MainHandTypeDropdown">
                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </dropdown>
<!--                        <label id="MainHandColorLabel">-->
<!--                            <text>Set Main Hand Range Color: </text>-->
<!--                        </label>-->
<!--                        <color-picker id="MainHandColorPicker">-->
<!--                            <show-alpha>true</show-alpha>-->
<!--                        </color-picker>-->

                        <flow-layout direction="horizontal">
                            <children>
                                <label id="MainHandColorLabel">
                                    <text>Set Main Hand Range Color:</text>
                                </label>
                                <text-box id="MainHandColorField">
                                    <text> </text>
                                    <sizing>
                                        <horizontal method="fixed">150</horizontal>
                                    </sizing>
                                </text-box></children>
                        </flow-layout>



                        <checkbox id="OffHandShowRangeSetting">
                            <text>Off Hand Show Range</text>
                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </checkbox>
                        <label id="OffHandTypeLabel">
                            <text>Off Hand Range Type</text>
                        </label>
                        <dropdown id="OffHandTypeDropdown">
                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </dropdown>
                        <flow-layout direction="horizontal">
                            <children>
                                <label id="OffHandColorLabel">
                                    <text>Set Offhand Range Color: </text>
                                </label>
                                <text-box id="OffHandColorField">
                                    <text> </text>
                                    <sizing>
                                        <horizontal method="fixed">150</horizontal>
                                    </sizing>
                                </text-box></children>
                        </flow-layout>
<!--                        <color-picker id="OffHandColorPicker">-->
<!--                            <show-alpha>true</show-alpha>-->
<!--                        </color-picker>-->

                    </children>
                    <padding><all>10</all></padding>
                </flow-layout>
            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
