<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <button id="Home">
                            <text>Home</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                        <button id="Gui">
                            <text>Gui</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                        <button id="Settings">
                            <text>Settings</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                        <button id="Teleport">
                            <text>Teleport</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                        <button id="Range">
                            <text>Range</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                    </children>
                </flow-layout> <!--Tab buttons-->
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text>Range tab</text>
                        </label>
                    </children>
                </flow-layout>


                <flow-layout direction="vertical">
                    <children>
                        <checkbox id="MainHandShowRangeSetting">
                            <text>Show Main Hand Range</text>
                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </checkbox>
                        <label id="MainHandTypeLabel">
                            <text>Main Hand Range Type</text>
                        </label>
                        <dropdown id="MainHandTypeDropdown">
                            <entries>
                                <text>Circle</text>
                                <text>Line</text>
                                <text>Both</text>
                            </entries>

                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </dropdown>
                        <label id="MainHandColorLabel">
                            <text>Main Hand Range Color</text>
                        </label>
                        <text-box id="MainHandColorField">
                            <text>000000</text>
                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </text-box>

                        <checkbox id="OffHandShowRangeSetting">
                            <text>Off Hand Show Range</text>
                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </checkbox>
                        <label id="OffHandTypeLabel">
                            <text>Off Hand Range Type</text>
                        </label>
                        <dropdown id="OffHandTypeDropdown">
                            <entries>
                                <text>Circle</text>
                                <text>Line</text>
                                <text>Both</text>
                            </entries>

                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </dropdown>
                        <label id="OffHandColorLabel">
                            <text>Main Hand Range Color</text>
                        </label>
                        <text-box id="OffHandColorField">
                            <text>000000</text>
                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </text-box>
                    </children>

                    <padding><all>10</all></padding>
                </flow-layout>
            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
