<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <label id="version">
                    <text>RealmsAddon v0.4</text>
                    <margins>
                        <all>15</all>
                    </margins><!--todo make this not hardcoded-->
                </label>
                <flow-layout direction="horizontal">
                    <children>
                        <button id="Home">
                            <text>Home</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                        <button id="Gui">
                            <text>Gui</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                        <button id="Settings">
                            <text>Settings</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                        <button id="Range">
                            <text>Range</text>
                            <margins>
                                <left>5</left>
                                <top>5</top>
                            </margins>
                            <sizing>
                                <horizontal method="fixed">100</horizontal>
                            </sizing>
                        </button>
                    </children>
                </flow-layout> <!--Tab buttons-->
                <flow-layout direction="vertical">
                    <children>
                        <button id="EditDisplayPosition">
                            <text>Edit Display Positions</text>
                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </button>
                        <button id="ResetDisplayPosition">
                            <text>Reset Display Positions</text>
                            <sizing>
                                <horizontal method="fixed">150</horizontal>
                            </sizing>
                        </button>
                        <flow-layout direction="horizontal">
                            <children>
                                <label id="ChangeGUIColorLabel">
                                    <text>Change GUI Color:</text>
                                </label>
                                <text-box id="ChangeGUIColorField">
                                    <text> </text>
                                    <sizing>
                                        <horizontal method="fixed">150</horizontal>
                                    </sizing>
                                </text-box>
                            </children>
                        </flow-layout>

                        <flow-layout direction="horizontal">
                            <children>
                                <label id="ChangeFontLabel">
                                    <text>Change GUI Font:</text>
                                </label>
                                <dropdown id="ChangeFontDropdown">

                                </dropdown>

                            </children>
                        </flow-layout>
                    </children>
                </flow-layout>
            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
